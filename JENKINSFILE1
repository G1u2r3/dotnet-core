pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    sh 'dotnet build --configuration Release'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    sh 'dotnet test'
                }
            }
        }
        stage('Publish') {
            steps {
                script {
                    sh 'dotnet publish --configuration Release --output ./publish'
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'publish/**'
        }
    }
}
